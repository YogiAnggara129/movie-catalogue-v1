    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_movie">

    <fragment
        android:id="@+id/navigation_movie"
        android:name="com.anggasaraya.moviecatalogue.ui.movie.MovieFragment"
        android:label="@string/movie"
        tools:layout="@layout/fragment_movie" />

    <fragment
        android:id="@+id/navigation_tvshow"
        android:name="com.anggasaraya.moviecatalogue.ui.tvshow.TVShowFragment"
        android:label="@string/tv_show"
        tools:layout="@layout/fragment_t_v_show" />

    <fragment
        android:id="@+id/navigation_favorite"
        android:name="com.anggasaraya.moviecatalogue.ui.favorite.FavoriteFragment"
        android:label="@string/favorite"
